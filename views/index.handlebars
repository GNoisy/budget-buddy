<!-- Items modal -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Add an Item</h4>

        <div class="row">
        <form class="col s12">
            <div class="row modal-form-row">
                <div class="input-field col s12">
                    <input id="item-name" type="text" class="validate">
                    <label for="item-name">Item name:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="item-price" type="text" class="validate">
                    <label for="item-price">Price:</label>
                </div>
            </div>
            <div class="row">
                <label>Category</label>
                <select class="browser-default" id = "item-category">
                    <option value="" disabled selected>Choose your category</option>
                    {{#each this.categories}}
                    <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="row">

            <p>Date for transaction: <input type="text" class="datepicker" size="30"></p>
            </div>
        </form>
        </div>
    </div>
<div class="modal-footer">
    <a class=" modal-action modal-close waves-effect waves-green btn-flat" data-value = "{{this.userId}}" id = "item_submit">Submit</a>
</div>
</div>

<!-- Categories modal -->
<div id="modal2" class="modal">
    <div class="modal-content">
        <h4>Add a Category</h4>

        <div class="row">
            <form class="col s12">
                <div class="row modal-form-row">
                    <div class="input-field col s12">
                        <input id="category_name" type="text" class="validate">
                        <label for="category_name">Category Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="category_goal" type="number" placeholder="100.00" step="0.01" min="0" max="100,000" class="validate">
                        <label for="category_goal">Amount of money you are looking to spend on this category each week </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a class=" modal-action modal-close waves-effect waves-green btn-flat" data-value = "{{this.userId}}" id = "cat_submit">Submit</a>
    </div>
</div>








